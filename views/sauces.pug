extends layout
 
block content
  h1= title
  - var result=[{company:"Ranch",package:"smallpackets",prize:2},{company:"Ketchup",package:"mediumpackets",prize:20},{company:"honeyranch",package:"largepackets",prize:200}] 
  div(class="container-fluid")
   div(class="row")
    - var i=0
    each form in result
     
     div(class="col-sm-2",,onclick=`buy(${i})`) company: #{form.company} - model: #{form.package} - prize: #{form.prize}
     -i=i+1
  script.
   function buy(a){
    alert(`purchased item ${a+1}`)        
   }